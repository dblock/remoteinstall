<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="RemoteInstallConfig" type="RemoteInstall.RemoteInstallConfig, RemoteInstall" />
  </configSections>
  <RemoteInstallConfig>
    <timeouts logout="60" />
    <!-- the installer will be copied to the destpath location on the remote vm -->
    <installers destpath="C:\">
      <!-- the installer file definition supports * that is replaced by the latest directory in the list of subdirectories -->
      <installer
        file="Samples\Sample.msi"
        name="Sample Installer on @{virtualmachine.name} (@{virtualmachine.type})"
        installargs="@{snapshot.installargs}"
        copymethod="network" />
    </installers>
    <virtualmachines>
      <!-- a virtual machine without snapshots: this simply runs the tests on a previously powered vm -->
      <virtualmachine
        type="Workstation"
        file="F:\My Virtual Machines\ddoub-green\winnetenterprise.vmx"
        name="Windows XP Pro SP2 (English)">
        <snapshots>
          <snapshot name="*" username="Administrator" password="admin123" installargs="X=Y" />
        </snapshots>
      </virtualmachine>
    </virtualmachines>
  </RemoteInstallConfig>
</configuration>
